<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:stretchColumns="*"
    tools:context=".HomeActivity"
    android:id="@+id/home_layout">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/men_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gender_men"
                android:textSize="20sp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                />

            <Button
                android:id="@+id/btn_more_men"
                android:layout_width="130dp"
                android:layout_height="25dp"
                android:layout_above="@+id/div1"
                android:text="@string/btn_see_more"
                android:background="@color/colorAccent"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="280dp"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true">
            </Button>

            <View style="@style/Divider"
                android:id="@+id/div1"
                android:layout_below="@+id/men_home"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView_home2">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <!-- Product sample with text -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:id="@+id/product_image1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        />

                    <TextView
                        android:id="@+id/product_name1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:minLines="2"
                        android:maxLines="2"
                        android:layout_below="@+id/product_image1" />

                    <TextView
                        android:id="@+id/product_price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_below="@+id/product_name1" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:id="@+id/product_image2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        />

                    <TextView
                        android:id="@+id/product_name2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:minLines="2"
                        android:maxLines="2"
                        android:layout_below="@+id/product_image2" />

                    <TextView
                        android:id="@+id/product_price2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_below="@+id/product_name2" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:id="@+id/product_image3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        />

                    <TextView
                        android:id="@+id/product_name3"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:minLines="2"
                        android:maxLines="2"
                        android:layout_below="@+id/product_image3" />

                    <TextView
                        android:id="@+id/product_price3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_below="@+id/product_name3" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:id="@+id/product_image4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        />

                    <TextView
                        android:id="@+id/product_name4"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:minLines="2"
                        android:maxLines="2"
                        android:layout_below="@+id/product_image4" />

                    <TextView
                        android:id="@+id/product_price4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_below="@+id/product_name4" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:id="@+id/product_image5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        />

                    <TextView
                        android:id="@+id/product_name5"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:minLines="2"
                        android:maxLines="2"
                        android:layout_below="@+id/product_image5" />

                    <TextView
                        android:id="@+id/product_price5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_below="@+id/product_name5" />

                </RelativeLayout>


                <!-- End product sample -->


            </LinearLayout>


        </HorizontalScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/women_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
